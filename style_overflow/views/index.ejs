  <script type="text/ng-template" id="/home.html">
    <div id='myHeader' class="page-header">
      <h1> </h1>
    </div>

    <div id='myPadding' ng-repeat="post in posts | orderBy:'-upvotes'">

      <span class="glyphicon glyphicon-thumbs-up"
        ng-click="incrementUpvotes(post)" style="padding-top: 13px;"></span>

      {{post.upvotes}}
      <span style="font-size:20px; margin-left:10px;">
        <a ng-show="post.link" href="{{post.link}}">
          {{post.title}}
        </a>
        <span ng-hide="post.link">
          {{post.title}}
        </span>
      </span>
      <span ng-show="post.author">
        posted by {{post.author}} |
      </span>
      <span>
        <a href="#/posts/{{post._id}}">Comments</a>
      </span>
    </div>

    <form ng-submit="addPost()"
      style="margin-top:30px;" ng-show="isLoggedIn()">
      <h3>Add a new post</h3>

      <div class="form-group">
        <input type="text"
        class="form-control"
        placeholder="Title"
        ng-model="title"></input>
      </div>
      <div class="form-group">
        <input type="text"
        class="form-control"
        placeholder="Link"
        ng-model="link"></input>
      </div>
      <button type="submit" class="btn btn-primary">Post</button>
    </form>

    <div id='myPadding' ng-hide="isLoggedIn()">
      <h3 style="padding-top: 12">Please <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you add a post.</h3>
    </div>
  </script>

  <script type="text/ng-template" id="/posts.html">
    <div id='myHeader' class="page-header">
      <h3>
        <a ng-show="post.link" href="{{post.link}}">
          {{post.title}}
        </a>
        <span ng-hide="post.link">
          {{post.title}}
        </span>
      </h3>
    </div>

    <div id='myPadding' ng-repeat="comment in post.comments | orderBy:'-upvotes'" style="padding-bottom: 20px;">
      <span class="glyphicon glyphicon-thumbs-up" 
        ng-click="incrementUpvotes(comment)"></span>
      {{comment.upvotes}} - by <a>{{comment.author}}</a>
      <span style="font-size:20px; margin-left:10px;">
        {{comment.body}}
      </span>
    </div>
    <form ng-submit="addComment()"
      style="margin-top:30px;" ng-show="isLoggedIn()">
      <h3>Add a new comment</h3>

      <div class="form-group">
        <input type="text"
        class="form-control"
        placeholder="Comment"
        ng-model="body"></input>
      </div>
      <button type="submit" class="btn btn-primary">Post</button>
    </form>

    <div id='myPadding' ng-hide="isLoggedIn()">
      <h3>Please <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you comment.</h3>
    </div>
  </script>

  <script type="text/ng-template" id="/login.html">
    <div id='myHeader' class="page-header">
      <h1></h1>
    </div>

    <div ng-show="error" class="alert alert-danger row">
      <span>{{ error.message }}</span>
    </div>

    <form ng-submit="logIn()"
      style="margin-top:30px;">
      <h3>Log In</h3>

      <div class="form-group">
        <input type="text"
        class="form-control"
        placeholder="Username"
        ng-model="user.username"></input>
      </div>
      <div class="form-group">
        <input type="password"
        class="form-control"
        placeholder="Password"
        ng-model="user.password"></input>
      </div>
      <button type="submit" class="btn btn-primary">Log In</button>
    </form>
  </script>

  <script type="text/ng-template" id="/register.html">
    <div id='myHeader' class="page-header">
      <h1></h1>
    </div>

    <div ng-show="error" class="alert alert-danger row">
      <span>{{ error.message }}</span>
    </div>

    <form ng-submit="register()"
      style="margin-top:30px;">
      <h3>Register</h3>

      <div class="form-group">
        <input type="text"
        class="form-control"
        placeholder="Username"
        ng-model="user.username"></input>
      </div>
      <div class="form-group">
        <input type="password"
        class="form-control"
        placeholder="Password"
        ng-model="user.password"></input>
      </div>
      <button type="submit" class="btn btn-primary">Register</button>
    </form>
  </script>

